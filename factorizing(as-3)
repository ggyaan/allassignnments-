    <script>
        
     let num=prompt("please enter the number");
     let fact=1;
     if (num==0){
         console.log(`the number is ${number} is 1`);

     }else if(num<0){
         console.log(` the number is -ve value `);
     }else{
         for(let i=1;i<=num;i++){
             fact=fact*1;
         }
     }

     

